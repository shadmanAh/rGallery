<!DOCTYPE html>
<html>
  <head>
    <title>RGallery</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
            <a class="navbar-brand" href="index.html"><h1>rGallery</h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                  <li class="nav-item">
                    <%= link_to "Home", root_path, class: 'nav-link active' %>
                  </li>
                  <% @categoryNav.each do |category| %>
                    <li class="nav-item"><%= link_to category.name, category_path(category.id), class: 'nav-link' %></li>
                  <% end %>
                </ul>
                <ul class="navbar-nav me-auto mb-2 mb-md-0 pull-right">
                    <li class="nav-item">
                      <%= link_to "Upload Photo", upload_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "Add Category", new_category_path, class: 'nav-link' %>
                    </li>
                </ul>
                
            </div>
            </div>
        </nav>

        <section>
            <div class="container">
              <!--Alerts & Messages-->
                <% if flash[:notice] %>
                  <div class="alert alert-success"><%= flash[:notice] %></div>
                <%end%>

                <% if flash[:alert] %>
                  <div class="alert alert-danger"><%= flash[:alert] %></div>
                <%end%>

                <%= yield %>
            </div>
        </section>


       <footer>
           <p>Copyright @copy; 2021, rGallery</p>
       </footer>
  </body>
</html>
